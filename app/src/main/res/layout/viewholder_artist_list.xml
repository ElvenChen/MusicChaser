<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="property"
            type="com.example.musicchaser.data.ArtistData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingBottom="16dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/artist_main_pic_area"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:elevation="@dimen/shadow_elevation"
            android:scaleType="centerCrop"
            app:bindImage="@{property.artistMainPic}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/artist_detail_area"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_shape_bottom_radius_16dp"
            android:backgroundTint="@color/light_grey"
            android:elevation="@dimen/shadow_elevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/artist_main_pic_area" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:elevation="@dimen/card_content_elevation"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="@dimen/letter_spacing"
            android:text="@{property.artistName}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/artist_detail_area"
            app:layout_constraintEnd_toEndOf="@id/artist_detail_area"
            app:layout_constraintTop_toTopOf="@+id/artist_detail_area"
            tools:text="溫蒂漫步" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>